<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pds.dao.UserMapper">

    <select id="userLogin" parameterType="com.pds.entity.User" resultType="com.pds.entity.User">
        select * from user_list where username = #{username} and password = #{password}
    </select>

    <insert id="userReg" parameterType="com.pds.entity.User">
        insert into user_list(username,password,name,sex,age,phone,address,type)
        values(#{username},#{password},#{name},#{sex},#{age},#{phone},#{address},'customer')
    </insert>

</mapper>